MODULES="a.000.base a.001.baseapp a.002.baselib a.003.xorg a.004.xfce a.005.minilib a.006.miniapp a.007.firefox"
RMSTUFF=y
CDNAME="archiso-live"
LABEL="Archiso-live"
PUBLISHER="http://godane.wordpress.com/"
#AUTHOR="Christopher Rogers aka Godane"
# when using mksquashfs with lzma 4.0
NOLZMA=n

if [ "${NOLZMA}" = "y" ]; then
    EXT="sqfs"
    MKOPTION="-comp gzip"
else
    EXT="lzm"
    MKOPTION="-comp lzma -b 256k"
fi

