install ()
{
    MODULES="cdrom ide-cd_mod ide-core ide-generic aufs squashfs isofs loop $(all_modules '/kernel/fs' | grep -v "nls") "
    MODULES="${MODULES} $(checked_modules "/usb/host" | grep -ve "_cs" -e "sl811-hcd" -e "isp116x-hcd")"
    MODULES=$(echo ${MODULES}) #trim whitespace
    if [ "x${MODULES}" != "x" ]; then
        MODULES="${MODULES} usb_storage sd_mod sr_mod"
    fi
    MODULES="${MODULES} virtio_pci virtio_blk"

    BINARIES="fusermount ulockmgr_server mount.fuse ntfs-3g mount.ntfs-3g ntfs-3g.probe blockdev"
    FILES=""
    #add_dir /tmpfs
    #add_dir /tmpfs.sqfs
    add_dir /bootmnt
    #add_dir /tmpfs/mnt/live/memory/changes
    #add_dir /tmpfs/mnt/live/memory/images
    add_dir /tmp
    add_dir /var/log
    add_dir /mnt

    add_device /dev/loop0 b 7 0

    add_binary /lib/udev/cdrom_id

    add_file /lib/udev/rules.d/60-cdrom_id.rules

    add_file /usr/share/hwdata/pci.ids
    add_file /usr/share/locale/locale.alias

    add_file $CWD/initcpio/liblinuxlive "/liblinuxlive"
    add_file $CWD/initcpio/bash "/bin/bash"
    add_file $CWD/initcpio/linuxrc "/linuxrc"

    SCRIPT="archiso"
}

# vim:ft=sh:ts=4:sw=4:et:
